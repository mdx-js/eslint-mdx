{
  "$schema": "http://json.schemastore.org/lerna",
  "version": "0.9.7",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "changelog": {
    "cacheDir": ".cache",
    "ignoreCommitters": ["*bot"],
    "nextVersion": "Unreleased"
  },
  "command": {
    "version": {
      "allowBranch": ["develop", "master"],
      "conventionalCommits": true,
      "gitReset": false,
      "message": "chore(release): %s"
    }
  }
}
