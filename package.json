{
  "name": "@rxts/eslint-mdx",
  "version": "0.0.0",
  "description": "ESLint Parser/Plugin for MDX",
  "repository": "git@github.com:rx-ts/eslint-mdx.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:ts": "tsc -b",
    "build:bundle": "r -x eslint-plugin-react/lib/rules/no-unescaped-entities",
    "build": "run-p build:*",
    "test": "jest",
    "lint:es": "eslint . --ext js,md,ts -f friendly",
    "lint:ts": "tslint -p . -t stylish",
    "lint:tsc": "tsc",
    "lint": "run-p lint:*",
    "type-coverage": "type-coverage --cache --ignore-catch --detail --ignore-files *.d.ts --strict"
  },
  "devDependencies": {
    "@1stg/babel-preset": "^0.7.0",
    "@1stg/commitlint-config": "^0.1.0",
    "@1stg/eslint-config": "^0.12.12",
    "@1stg/husky-config": "^0.3.0",
    "@1stg/lint-staged": "^0.7.4",
    "@1stg/prettier-config": "^0.2.0",
    "@1stg/remark-config": "^0.2.1",
    "@1stg/rollup-config": "^0.9.6",
    "@1stg/tsconfig": "^0.5.4",
    "@1stg/tslint-config": "^0.3.4",
    "@babel/core": "^7.6.0",
    "@commitlint/cli": "^8.2.0",
    "@types/cosmiconfig": "^5.0.3",
    "@types/eslint": "^6.1.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/react": "^16.9.2",
    "@types/rebass": "^4.0.0",
    "@types/unist": "^2.0.3",
    "eslint": "^6.4.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^9.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "1.18.2",
    "react": "^16.9.0",
    "rollup": "^1.21.4",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "type-coverage": "^2.3.0",
    "typescript": "^3.6.3"
  },
  "commitlint": {
    "extends": [
      "@1stg"
    ]
  },
  "eslintIgnore": [
    "**/fixtures/**",
    "CHANGELOG.md",
    "coverage",
    "lib"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/packages/*/src"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleNameMapper": {
      "^eslint-mdx$": "<rootDir>/packages/eslint-mdx/src",
      "^eslint-plugin-mdx$": "<rootDir>/packages/eslint-plugin-mdx/src"
    },
    "preset": "ts-jest"
  },
  "prettier": "@1stg/prettier-config",
  "remarkConfig": {
    "plugins": [
      "@1stg/remark-config"
    ]
  },
  "renovate": {
    "extends": [
      "@1stg"
    ]
  },
  "typeCoverage": {
    "atLeast": 99
  }
}
