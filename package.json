{
  "name": "@mdx-js/eslint",
  "version": "0.0.0",
  "description": "ESLint Parser/Plugin for MDX",
  "repository": "git+https://github.com/mdx-js/eslint-mdx.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:r": "r",
    "build:ts": "tsc -b",
    "clean": "rimraf packages/*/{lib,*.tsbuildinfo}",
    "deploy": "lerna publish --create-release github --yes",
    "lint": "run-p lint:*",
    "lint:es": "cross-env PARSER_NO_WATCH=true eslint . --cache --ext js,md,ts -f friendly",
    "lint:ts": "tslint -p . -t stylish",
    "lint:tsc": "tsc --incremental --noEmit",
    "predeploy": "yarn build",
    "prelint": "yarn build",
    "pretest": "yarn clean",
    "test": "ts-node --skip-ignore node_modules/.bin/jest",
    "type-coverage": "type-coverage --cache --detail --ignore-catch --ignore-files *.d.ts --strict"
  },
  "devDependencies": {
    "@1stg/lib-config": "^0.1.20",
    "@1stg/tslint-config": "^0.5.9",
    "@types/eslint": "^6.1.7",
    "@types/jest": "^24.9.1",
    "@types/node": "^13.5.0",
    "@types/react": "^16.9.19",
    "@types/rebass": "^4.0.4",
    "@types/unist": "^2.0.3",
    "cosmiconfig": "^6.0.0",
    "eslint-mdx": "link:packages/eslint-mdx/src",
    "eslint-plugin-mdx": "link:packages/eslint-plugin-mdx/src",
    "lerna": "^3.20.2",
    "npm-run-all": "^4.1.5",
    "react": "^16.12.0",
    "ts-jest": "^25.0.0",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "type-coverage": "^2.4.0"
  },
  "resolutions": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "eslint-plugin-prettier": "^3.1.2",
    "typescript": "^3.7.5"
  },
  "commitlint": {
    "extends": [
      "@1stg"
    ]
  },
  "eslintIgnore": [
    "**/fixtures/**",
    "coverage",
    "lib",
    "CHANGELOG.md",
    "!/.*.js"
  ],
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "preset": "ts-jest"
  },
  "prettier": "@1stg/prettier-config",
  "remarkConfig": {
    "plugins": [
      "@1stg/remark-config"
    ]
  },
  "renovate": {
    "extends": [
      "@1stg"
    ]
  },
  "typeCoverage": {
    "atLeast": 99
  }
}
