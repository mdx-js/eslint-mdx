{
  "name": "@rxts/eslint-mdx",
  "version": "0.0.0",
  "description": "ESLint Parser/Plugin for MDX",
  "repository": "git@github.com:rx-ts/eslint-mdx.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:r": "r",
    "build:ts": "tsc -b",
    "clean": "rimraf packages/*/{lib,*.tsbuildinfo}",
    "lint": "run-p lint:*",
    "lint:es": "cross-env PARSER_NO_WATCH=true eslint . --cache --ext js,md,ts -f friendly",
    "lint:ts": "tslint -p . -t stylish",
    "lint:tsc": "tsc --incremental --noEmit",
    "prelint": "yarn build",
    "pretest": "yarn clean",
    "test": "ts-node --skip-ignore -T node_modules/.bin/jest",
    "type-coverage": "type-coverage --cache --detail --ignore-catch --ignore-files *.d.ts --strict"
  },
  "devDependencies": {
    "@1stg/lib-config": "^0.1.6",
    "@1stg/tslint-config": "^0.5.5",
    "@types/cosmiconfig": "^5.0.3",
    "@types/eslint": "^6.1.3",
    "@types/jest": "^24.0.21",
    "@types/node": "^12.12.5",
    "@types/react": "^16.9.11",
    "@types/rebass": "^4.0.3",
    "@types/unist": "^2.0.3",
    "eslint-mdx": "link:packages/eslint-mdx/src",
    "eslint-plugin-mdx": "link:packages/eslint-plugin-mdx/src",
    "lerna": "^3.18.4",
    "npm-run-all": "^4.1.5",
    "react": "^16.11.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "type-coverage": "^2.3.0",
    "typescript": "^3.6.4"
  },
  "resolutions": {
    "@babel/core": "^7.6.4",
    "typescript": "^3.6.4"
  },
  "commitlint": {
    "extends": [
      "@1stg"
    ]
  },
  "eslintIgnore": [
    "**/fixtures/**",
    "coverage",
    "lib",
    "CHANGELOG.md",
    "!/*.js"
  ],
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "preset": "ts-jest"
  },
  "prettier": "@1stg/prettier-config",
  "remarkConfig": {
    "plugins": [
      "@1stg/remark-config"
    ]
  },
  "renovate": {
    "extends": [
      "@1stg"
    ]
  },
  "typeCoverage": {
    "atLeast": 99
  }
}
