{
  "name": "@rxts/eslint-mdx",
  "version": "0.0.0",
  "description": "ESLint Parser/Plugin for MDX",
  "repository": "git@github.com:rx-ts/eslint-mdx.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:r": "r",
    "build:ts": "tsc -b",
    "clean": "rimraf packages/*/{lib,*.tsbuildinfo}",
    "lint": "run-p lint:*",
    "lint:es": "cross-env PARSER_NO_WATCH=true eslint . --cache --ext js,md,ts -f friendly",
    "lint:ts": "tslint -p . -t stylish",
    "lint:tsc": "tsc --incremental --noEmit",
    "prelint": "yarn build",
    "pretest": "yarn clean",
    "test": "ts-node --skip-ignore -T node_modules/.bin/jest",
    "type-coverage": "type-coverage --cache --detail --ignore-catch --ignore-files *.d.ts --strict"
  },
  "devDependencies": {
    "@1stg/babel-preset": "^0.7.10",
    "@1stg/commitlint-config": "^0.1.2",
    "@1stg/eslint-config": "^0.13.1",
    "@1stg/husky-config": "^0.3.2",
    "@1stg/lint-staged": "^0.8.11",
    "@1stg/prettier-config": "^0.4.3",
    "@1stg/remark-config": "^0.2.2",
    "@1stg/tsconfig": "^0.6.1",
    "@1stg/tslint-config": "^0.4.3",
    "@babel/core": "^7.6.4",
    "@commitlint/cli": "^8.2.0",
    "@pkgr/rollup": "^0.3.0",
    "@types/cosmiconfig": "^5.0.3",
    "@types/eslint": "^6.1.2",
    "@types/jest": "^24.0.19",
    "@types/node": "^12.11.2",
    "@types/react": "^16.9.9",
    "@types/rebass": "^4.0.3",
    "@types/unist": "^2.0.3",
    "eslint": "^6.5.1",
    "eslint-mdx": "link:packages/eslint-mdx/src",
    "eslint-plugin-mdx": "link:packages/eslint-plugin-mdx/src",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lerna": "^3.18.2",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^9.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "1.18.2",
    "react": "^16.10.2",
    "rollup": "^1.25.1",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "type-coverage": "^2.3.0",
    "typescript": "^3.6.4"
  },
  "resolutions": {
    "typescript": "^3.6.4"
  },
  "commitlint": {
    "extends": [
      "@1stg"
    ]
  },
  "eslintIgnore": [
    "**/fixtures/**",
    "coverage",
    "lib",
    "CHANGELOG.md",
    "!/*.js"
  ],
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "preset": "ts-jest"
  },
  "prettier": "@1stg/prettier-config",
  "remarkConfig": {
    "plugins": [
      "@1stg/remark-config"
    ]
  },
  "renovate": {
    "extends": [
      "@1stg"
    ]
  },
  "typeCoverage": {
    "atLeast": 99
  }
}
