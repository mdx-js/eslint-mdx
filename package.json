{
  "name": "eslint-mdx",
  "version": "0.9.6",
  "description": "ESLint Parser/Plugin for MDX",
  "repository": "git@github.com:rx-ts/eslint-mdx.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "test": "jest",
    "lint": "EFF_NO_LINK_RULES=true eslint . --ext js,mdx,ts,tsx -f friendly"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.1.0",
    "@rxts/eslint-plugin-mdx": "link:packages/eslint-plugin-mdx/src",
    "@types/eslint": "^4.16.6",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.6.9",
    "@types/react": "^16.8.24",
    "@types/unist": "^2.0.3",
    "babel-eslint": "^10.0.2",
    "commitlint": "^8.1.0",
    "eslint": "^6.1.0",
    "eslint-config-1stg": "^5.6.9",
    "eslint-formatter-friendly": "^7.0.0",
    "eslint-mdx": "link:packages/eslint-mdx/src",
    "eslint-plugin-jest": "^22.14.1",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "lerna": "^3.16.4",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^9.2.1",
    "prettier": "1.18.2",
    "prettier-config-1stg": "^0.1.0",
    "react": "^16.8.6",
    "remark-mdx": "^1.1.5",
    "remark-parse": "^7.0.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3",
    "unified": "^8.3.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintIgnore": [
    "lib",
    "node_modules"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/"
    ]
  },
  "lint-staged": {
    "*.{html,json,md,scss,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{mdx,js,ts}": [
      "eslint",
      "git add"
    ]
  },
  "prettier": "prettier-config-1stg",
  "renovate": {
    "extends": [
      "1stg"
    ]
  }
}
